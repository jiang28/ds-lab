<!-- -*- mode: web -*- -->

<!DOCTYPE html>
<html>
  {{> partials/head}}
  <body class="news">

    <div class="container">

      {{> partials/header}}

      {{#news}}
        <div class="row">
          <div class="col-sm-12 col-md-4">
            <img class="img-responsive" src="/dslab/img/{{picture}}" alt="{{title}}">
          </div>
          <div class="col-sm-12 col-md-8">
            <h3 class="media-heading">{{title}}</h3>
            <p>{{summary}}</p>     
            <p><a href="{{url}}">{{info}}</a></p>     
          </div>
        </div>
      {{/news}}

    </div>

    {{> partials/footer}}
  </body>
</html>